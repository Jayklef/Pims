@model IEnumerable<Pims.Models.Department>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2>List Of Departments</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Departments" asp-action="Create" class="btn btn-primary">Create Department</a>
        </div>
    </div>

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr>
                    <th>DepartmentId</th>
                    <th>Department Name</th>
                    <th>Department Location</th>
                    <th class="text-center">Changes</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var department in Model)
                {
                    <tr>
                        <td>@department.DeptId</td>
                        <td>@department.DeptName</td>
                        <td>@department.Location</td>
                        <td width="50%">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="Departments" asp-action="Details" asp-route-id="@department.Id" class="btn btn-primary mx-1">Details</a>
                                <a asp-controller="Departments" asp-action="Update" asp-route-id="@department.Id" class="btn btn-primary mx-1">Update</a>
                                <a asp-controller="Departments" asp-action="Delete" asp-route-id="@department.Id" class="btn btn-danger mx-1">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    else
    {
        <p>No Department has been created</p>
    }
</div>