@model IEnumerable<Pims.Models.Employee>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2>List of Employees</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Employees" asp-action="Create" class="btn btn-primary">New Employee</a>
        </div>
    </div>

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr>
                    <th>StaffNumber</th>
                    <th>Grade</th>
                    <th>FirtsName</th>
                    <th>LastName</th>
                    <th>Email</th>
                    <th>Gender</th>
                    <th>Marital Status</th>
                    <th>BirthDate</th>
                    <th>Address</th>
                    <th>Department</th>
                    <th class="text-center">Changes</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var employee in Model)
                {
                <tr>
                    <td>@employee.StaffNumber</td>
                    <td>@employee.GradeLevel</td>
                    <td>@employee.FirstName</td>
                    <td>@employee.LastName</td>
                    <td>@employee.Email</td>
                    <td>@employee.Gender</td>
                    <td>@employee.MaritalStatus</td>
                    <td>@employee.BirthDate</td>
                    <td>@employee.Address</td>
                    <td>@employee.Department</td>
                    <td width="50%">
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Employees" asp-action="Details" asp-route-id="@employee.Id" class="btn btn-primary mx-1">Details</a>
                            <a asp-controller="Employees" asp-action="Update" asp-route-id="@employee.Id" class="btn btn-primary mx-1">Update</a>
                            <a asp-controller="Employees" asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-danger mx-1">Delete</a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }

    else
    {
       <p>No Employee record found</p>
    }
</div>